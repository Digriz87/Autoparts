<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0065A0"

    >
    <ImageView
        android:id="@+id/mainLogo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400px"
        android:layout_width="450px"
        android:layout_height="120px"
        android:background="@drawable/log"

        />

<ImageView
    android:id="@+id/poloska"
    android:layout_gravity="center_horizontal"
    android:layout_width="450px"
    android:layout_height="1px"
    android:background="#FFFFFF"
    android:layout_marginTop="540px"


    />
<ImageView
    android:id="@+id/engine"
    android:layout_width="90px"
    android:layout_height="90px"
    android:background="@drawable/engine"
    android:layout_marginLeft="200px"
    android:layout_marginTop="550px"
    />
    <ImageView
        android:id="@+id/steering"
        android:layout_width="90px"
        android:layout_height="90px"
        android:background="@drawable/steering"
        android:layout_marginLeft="300px"
        android:layout_marginTop="550px"
        />
    <ImageView
        android:id="@+id/garage"
        android:layout_width="90px"
        android:layout_height="90px"
        android:background="@drawable/garage"
        android:layout_marginLeft="400px"
        android:layout_marginTop="550px"
        />
    <ImageView
        android:id="@+id/wheel"
        android:layout_width="90px"
        android:layout_height="90px"
        android:background="@drawable/wheel"
        android:layout_marginLeft="500px"
        android:layout_marginTop="550px"
        />
</FrameLayout>