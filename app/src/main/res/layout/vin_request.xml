<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    >




    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100px"
            >

            <EditText
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Введите 17 цифр vin-кода "/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Марка автомобиля"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Email"/>

            <EditText
                android:id="@+id/ip_addreess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Ваше имя"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Номер телефона"/>



            <EditText
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Автозапчасть 1:"/>

            <EditText
                android:id="@+id/height"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Автозапчасть 2:"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <Button

                android:id="@+id/clear"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/style"
                android:text="Очистить"
                android:onClick="clearBtn"
                />

            <Button
                android:id="@+id/submit"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/style"
                android:text="Отправка запроса"
                android:onClick="sendBtn"
                />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>


    <ImageView
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#2979FF"

        />

    <ImageView
        android:id="@+id/shadow_sink"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#616161"

        />

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_marginTop="5px"
        android:layout_marginLeft="10px"
        android:layout_width="350px"
        android:layout_height="90px"
        android:background="@drawable/log"
        />

    <ImageView
        android:id="@+id/backspace"
        android:layout_marginTop="5px"
        android:layout_width="90px"
        android:layout_height="90px"
        android:background="@drawable/left"


        />

    <ImageView
        android:id="@+id/shadow_top"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#20FFFFFF"

        />




</FrameLayout>
